{#
/**
 * @file
 * Social Card pattern.
 */
#}
<div{{ attributes.addClass('social-card') }}>
  <div class="social-card__content">
    {{ handle_link|openlink({class:"social-card__name"}) }}
      {{handle}}
    {{ handle_link|closelink }}
      <p>{{ description|raw }}</p>

    {{ link|openlink({class:"social-card__action"}) }}
      <div class="social-card__icon">
        <svg class="i-svg i-svg--twitter"><use xlink:href="#i-twitter" xmlns:xlink="http://www.w3.org/1999/xlink"></use></svg>
      </div>
    {{ link|closelink }}
  </div>
</div>
