{#
/**
 * @file
 * Callout blocks pattern.
 */
#}
<div{{ attributes.addClass('callout-block') }}>
  <div class="callout-block__title">
    <span class="callout-block__intro">{{ intro }}</span>
    <h3 class="callout-block__name">
      {{ link|openlink }}
        {{ title }}
      {{ link|closelink }}
    </h3>
    <span class="callout-block__subhead">{{ subtitle }}</span>
  </div>

  {% if link|openlink is not empty %}
    {{ link|openlink({class: 'callout-block__action'}) }}
      <svg class="i-svg i-svg--arrow-right"> <use xlink:href="#i-arrow" xmlns:xlink="http://www.w3.org/1999/xlink"></use> </svg>
    {{ link|closelink }}
  {% endif %}

  <div class="callout-block__icon">
    {{ image }}
  </div>
</div>
