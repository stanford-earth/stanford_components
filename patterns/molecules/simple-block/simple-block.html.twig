{#
/**
 * @file
 * Simple Block pattern.
 */
#}
{% set attributes = attributes.addClass(['simple-block']) %}
{% if variants.has_arrow %}
  {% set attributes = attributes.addClass('has-arrow') %}
{% endif %}

<div{{ attributes }}>
  {% if image is not empty %}
    <figure class="simple-block__image">
      {{ link|openlink({class: "simple-block__link"}) }}
      <div class="simple-block__thumbnail">
        {{ image }}
        {% if tag|render|striptags|trim is not empty %}
          <div class="simple-block__tag">
            <h6>{{ tag|render|striptags|trim }}</h6>
          </div>
        {% endif %}
      </div>
      {{ link|closelink }}

      {% if image_caption %}
        <figcaption class="simple-block__image-caption">
          {{ image_caption }}
        </figcaption>
      {% endif %}
    </figure>
  {% endif %}
  <div class="simple-block__content">

    {% if title is not empty %}
      <h3>{{ link|openlink({class:"simple-block__link"}) }}{{ title }}{{ link|closelink }}</h3>
    {% endif %}

    {% if description is not empty %}
      <p class="simple-block__description">
        {{ description }}
        {% if variants.has_arrow and link|render is not empty %}
          {{ link|openlink }}
          <span class="simple-block__arrow"><svg class="i-svg i-svg--arrow-right"><use xlink:href="#i-arrow"
                                                                                       xmlns:xlink="http://www.w3.org/1999/xlink"></use></svg></span>
          {{ link|closelink }}
        {% endif %}
      </p>
    {% endif %}

    {% if more is not empty %}
      {{ link|openlink({class:"simple-block__more"}) }}
        {{ more }}
      {{ link|closelink }}
    {% else %}
      {{ link }}
    {% endif %}
  </div>
</div>
