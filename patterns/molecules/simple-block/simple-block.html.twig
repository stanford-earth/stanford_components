{#
/**
 * @file
 * Simple Block pattern.
 */
#}
{% set attributes = attributes.addClass('simple-block') %}
{% if variants.has_arrow %}
  {% set attributes = attributes.addClass('has-arrow') %}
{% endif %}
{% if variants.is_slat %}
  {% set attributes = attributes.addClass('simple-slat') %}
{% endif %}

<div {{ attributes }}>
  {% if image is not empty %}
  <div class="simple-block__image">
    {{ link|openlink({class:"simple-block__link"}) }}
      <div class="simple-block__thumbnail">
        {{ image }}
        {% if tag is not empty %}
          <div class="simple-block__tag">
            <h6>{{ tag|render|striptags|trim }}</h6>
          </div>
        {% endif %}
      </div>
    {{ link|closelink }}
  </div>
  {% endif %}
  <div class="simple-block__content">
  {% if title is not empty %}
    <h3>{{ link|openlink({class:"simple-block__link"}) }}{{ title }}{{ link|closelink }}</h3>
  {% endif %}
  {% if description is not empty %}
    <p class="simple-block__description">
    {{ description }}
    {% if variants.has_arrow and link|render is not empty %}
    {{ link|openlink }}<span class="simple-block__arrow"><svg class="i-svg i-svg--arrow-right"><use xlink:href="#i-arrow" xmlns:xlink="http://www.w3.org/1999/xlink"></use></svg></span>{{ link|closelink }}
    {% endif %}
    </p>
  {% endif %}
  {% if more is not empty %}
  {{ link|openlink({class:"simple-block__more"}) }}{{ more }}{{ link|closelink }}
  {% endif %}
  </div>
</div>
