{#
/**
 * @file
 * Card pattern.
 */
#}

<div class="film-card{% if has_arrow %} has-arrow{% endif %}">
  {% if link is not empty %}
  <a class="film-card__link" href="{{ link|render|striptags|trim }}">
  {% endif %}
    <div class="film-card__thumbnail">
        {{ image }}
    </div>
    <div class="film-card__caption">
      <h6>{{ title|render|striptags|trim }}</h6>
    </div>
    {% if has_arrow %}
      <div class="film-card__arrow">
        <svg class="i-svg i-svg--arrow-right"><use xlink:href="#i-arrow" xmlns:xlink="http://www.w3.org/1999/xlink"></use></svg>
      </div>
    {% endif %}
  {% if link is not empty %}
  </a>
  {% endif %}
</div>
